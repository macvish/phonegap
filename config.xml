<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.bsdmasterindex.phonegapgeolocation-test"
        version     = "1.0.1"
        versionCode = "10" >
        <!-- versionCode is optional and Android only -->
       <!-- <preference name="phonegap-version" value="5.1.0" /> -->

        <name>Phonegap Geolocation test</name>
        <description>Simple GPS Test</description>
        <author href="#" email="macintony1@gmail.com">
        Ahaotu MacAnthony
        </author>
        <gap:platform name="android" />
        <gap:platform name="ios" />

        <preference name="permissions" value="none"/>
        <!-- device required so we can detect if we are using iOS -->
		<gap:plugin name="org.apache.cordova.device" version="0.3.0 />
		<gap:plugin name="org.apache.cordova.geolocation" version="0.3.12/>
    </widget>
